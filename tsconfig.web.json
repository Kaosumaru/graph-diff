{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.tsx",
    "src/preload/*.d.ts", 
    "src/diff/**/*", 
    "src/components/**/*", 
    "src/localtest/**/*", 
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*",
      ],
      "@diff/*": [
        "src/diff/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
    }
  }
}
